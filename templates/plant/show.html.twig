{% extends 'base.html.twig' %}

{% block title %}Plant{% endblock %}

{% block body %}
    <h1>Plant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ plant.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ plant.description }}</td>
            </tr>
            <tr>
                <th>MinNumberOfDaysToWater</th>
                <td>{{ plant.minNumberOfDaysToWater }}</td>
            </tr>
            <tr>
                <th>MaxNumberOfDaysToWater</th>
                <td>{{ plant.maxNumberOfDaysToWater }}</td>
            </tr>
            <tr>
                <th>Fertilizers</th>
                <td>{{ plant.fertilizers }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_plant_index') }}">back to list</a>

    <a href="{{ path('app_plant_edit', {'id': plant.id}) }}">edit</a>

    {{ include('plant/_delete_form.html.twig') }}
{% endblock %}
